{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2015",
    "lib": [
      "es5",
      "es6",
      "es7",
      "es2017",
      "dom"
    ],
    "sourceMap": true,
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "jsx": "react-jsx",
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "rootDirs": [
      "src",
      "stories"
    ],
    "resolveJsonModule": true,
    "isolatedModules": true,
    "typeRoots": [
      "index.d.ts",
      "node_modules/@types"
    ],
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ],
    "noEmit": false
  },
  "files": [
    "svg.d.ts",
    "index.d.ts"
  ],
  "include": [
    "src/**/*",
    "stories/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "src/**/*.test.tsx"
  ]
}
